{% extends "base.jinja" %}

{% block title %} Homepage {% endblock %}

{% block head %}

{{ super() }}


<link rel="stylesheet" type="text/css" href="/styles/index.css" />

{% endblock %}

{% block content %}

{% include "components/navbar.jinja" ignore missing %}

<div class="alert alert-success" role="alert">
    {{ message }}
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="..." alt="First slide">
        </div>

        {% for image in images %}

        <div class="carousel-item">
            <img class="d-block w-100" src="{{ image }}" alt="Second slide">
        </div>
        {% endfor %}

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<form class="needs-validation" novalidate>
    <div class="form-row">
        <label for="validationCustom01">First name</label>
        <input type="text" class="form-control" id="validationCustom01" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <label for="validationCustom02">Last name</label>
    <input type="text" class="form-control" id="validationCustom02" required>
    <div class="valid-feedback">
        Looks good!
    </div>

    <div class="form-group">
        <label for="validationCustom03">Subject:</label>
        <input type="text" class="form-control" id="validationCustom03" required />
        <div class="invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label for="validationCustom04">Email :</label>
        <input type="email" class="form-control needs-validation" required>
        <small id="emailHelp" id="validationCustom04" class="form-text text-muted">We probably won't share
            your email with anyone else,
            probably.</small>
    </div>
    <div class="form-group">
        <label for="validationCustom05">Regarding:</label>
        <small id="regardingHelp" class="form-text text-muted"> To select muliple, hold down ctrl while
            clicking.</small>
        <select class="form-control ">
            <option>Permission of use</option>
            <option>Request of purchase</option>
            <option>Problems on website</option>
            <option>Copyright infrigment</option>
            <option>Other</option>
        </select>
    </div>
    <div class="form-group">
        <label for="validationCustom05">Message:</label>
        <textarea name="Form-control" id="validationCustom06" required cols="30" rows="10"></textarea>
        <div class="invalid-feedback"></div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-primary">Meow (Submit)</button>
</form>

{% endblock %}

{% block footer %}

<script src="/scripts/index.js" crossorigin="anonymous"></script>

{% endblock %}